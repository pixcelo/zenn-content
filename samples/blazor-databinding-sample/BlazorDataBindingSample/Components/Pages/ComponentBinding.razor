@page "/component-binding"
@rendermode InteractiveServer

<PageTitle>コンポーネント間バインディング</PageTitle>

<h1>コンポーネント間バインディング</h1>

<div class="card">
    <div class="card-header">
        <h3>親から子へのデータ受け渡し (Parameter)</h3>
    </div>
    <div class="card-body">
        <div class="mb-3">
            <label class="form-label">親コンポーネントで入力:</label>
            <input class="form-control" @bind="parentMessage" @bind:event="oninput" />
        </div>

        <ChildComponent ParentValue="@parentMessage"
                       Count="@childCount"
                       CountChanged="@OnChildCountChanged"
                       OnNotify="@HandleChildNotification"
                       BackgroundClass="bg-info bg-opacity-10" />

        <div class="mt-3">
            <p>子コンポーネントのカウント（親で管理）: <strong>@childCount</strong></p>
        </div>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h3>双方向バインディング (@@bind-パラメータ名)</h3>
    </div>
    <div class="card-body">
        <p>@@bind を使うと、親と子の値を自動で同期できます</p>
        <div class="mb-3">
            <label class="form-label">親コンポーネントで管理する値:</label>
            <input class="form-control" @bind="parentControlledValue" @bind:event="oninput" />
            <p class="mt-2">現在の値: <strong>@parentControlledValue</strong></p>
        </div>

        <ChildComponent ParentValue="親から渡された固定値"
                       @bind-Count="childCount"
                       OnNotify="@HandleChildNotification"
                       BackgroundClass="bg-success bg-opacity-10" />
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h3>カスタム入力コンポーネント</h3>
    </div>
    <div class="card-body">
        <CustomInput Label="ユーザー名"
                    @bind-Value="username"
                    Placeholder="ユーザー名を入力"
                    HelpText="半角英数字で入力してください"
                    ValidationMessage="@usernameValidation"
                    IsValid="@isUsernameValid" />

        <CustomInput Label="メールアドレス"
                    @bind-Value="email"
                    InputType="email"
                    Placeholder="example@example.com"
                    Prefix="📧"
                    ValidationMessage="@emailValidation"
                    IsValid="@isEmailValid" />

        <CustomInput Label="価格"
                    @bind-Value="priceText"
                    InputType="number"
                    Prefix="¥"
                    Suffix="円"
                    HelpText="税込価格を入力" />

        <div class="mt-3">
            <button class="btn btn-primary" @onclick="ValidateInputs">検証</button>
        </div>

        <div class="alert alert-info mt-3">
            <strong>入力された値:</strong><br />
            ユーザー名: @username<br />
            メール: @email<br />
            価格: @priceText
        </div>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h3>複数の子コンポーネント</h3>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6 mb-3">
                <ChildComponent ParentValue="子コンポーネント1"
                               @bind-Count="count1"
                               OnNotify="@HandleChildNotification"
                               BackgroundClass="bg-primary bg-opacity-10" />
            </div>
            <div class="col-md-6 mb-3">
                <ChildComponent ParentValue="子コンポーネント2"
                               @bind-Count="count2"
                               OnNotify="@HandleChildNotification"
                               BackgroundClass="bg-warning bg-opacity-10" />
            </div>
        </div>

        <div class="alert alert-secondary">
            <p>合計カウント: <strong>@(count1 + count2)</strong></p>
            <button class="btn btn-sm btn-secondary" @onclick="ResetAllCounts">すべてリセット</button>
        </div>
    </div>
</div>

<div class="card mt-3">
    <div class="card-header">
        <h3>子コンポーネントからの通知</h3>
    </div>
    <div class="card-body">
        @if (notifications.Any())
        {
            <ul class="list-group">
                @foreach (var notification in notifications.TakeLast(5))
                {
                    <li class="list-group-item">@notification</li>
                }
            </ul>
        }
        else
        {
            <p class="text-muted">まだ通知がありません</p>
        }
    </div>
</div>
