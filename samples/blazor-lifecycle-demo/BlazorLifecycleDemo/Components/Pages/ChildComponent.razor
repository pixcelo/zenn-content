@implements IDisposable
@inject ILogger<ChildComponent> Logger

<div class="card mt-3">
    <div class="card-header bg-secondary text-white">
        <h5>子コンポーネント</h5>
    </div>
    <div class="card-body">
        <p>受信したメッセージ: <strong>@Message</strong></p>
        <small class="text-muted">このコンポーネントは親からパラメータを受け取ります</small>

        <div class="mt-3">
            <h6>子コンポーネントのライフサイクルログ:</h6>
            <ol>
                @foreach (var log in childLifecycleLogs)
                {
                    <li><small>@log</small></li>
                }
            </ol>
        </div>
    </div>
</div>


